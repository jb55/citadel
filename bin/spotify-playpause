#!/usr/bin/env bash

bus=$(dbus-send \
      --print-reply=literal \
      --dest=org.freedesktop.DBus \
      --type=method_call \
      /org/freedesktop/DBus \
      org.freedesktop.DBus.ListNames |
      tr ' ' '\n' |
      grep 'org.mpris.MediaPlayer2' |
      head -n 1
    )

dbus-send --print-reply --dest="$bus" /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
