#!/usr/bin/env bash
#exec chrome "$@"

set -e

#BROWSER=chromium
BROWSER=qutebrowser
BROWSER_ARGS="--enable-webengine-inspector"

kill_browser () {
  #exec pkill qutebrowser
  pkill --oldest "$BROWSER"
  exit 0
}

if [ "$1" = "kill" ]; then
    kill_browser
fi

"$BROWSER" "$BROWSER_ARGS" "$@"
#qutebrowser --enable-webengine-inspector "$@"
exec wmctrl -a "$BROWSER"
