#!/usr/bin/env bash

usage () {
  printf "usage: pdfnow file.md OR <file.md pdfnow [markdown]\n" >&2
  exit 1
}

outfile="$(mktemp)".pdf

if [ -t 0 ]; then
  [ $# -eq 0 ] && usage
  /home/jb55/bin/pdfsave "$1" "$outfile"
else
  ext="${1:-markdown}"
  /home/jb55/bin/pdfsave "$outfile" "$ext"
fi

zathura "$outfile" &>/dev/null

rm "$outfile"
